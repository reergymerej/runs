extends layout

block content
    h1= title
    form
        div#msg-container
            div#message
        div.field
            label Date
                input#date(type='text' name='date')
        div.field
            label Time
                input#time(type='text' name='time')
        div.field
            label Distance
                input#distance(type='text' name='distance')
        div.field
            label Rating
                input#rating(type='text' name='rating')
        div.field
            label Weight
                input#weight(type='text' name='weight')
        div.field
            input(type='submit')

    hr
    a(href='api/run') view all runs
    div= message
